<Window x:Class="AutoclickerUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid x:Name="LayoutRoot" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="5*" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <ScrollViewer Grid.Column="0" Grid.ColumnSpan="4">
            <TextBlock x:Name="textBlock" TextWrapping="Wrap" />
        </ScrollViewer>
        <Button x:Name="startButton" Grid.Column="0" Grid.Row="1" Click="StartClick" >Start</Button>
        <!--<Button Grid.Column="1" Grid.Row="1" Click="ButtonClick" ></Button>-->
        <!--<Button Grid.Column="2" Grid.Row="1" Click="ShowClick" >Show</Button>-->
        <Button Grid.Column="3" Grid.Row="1" Click="ClearScreenClick" >CLEAR SCREEN</Button>
    </Grid>
</Window>
